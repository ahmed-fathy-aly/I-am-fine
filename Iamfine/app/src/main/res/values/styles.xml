<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">

        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="facebookButtonTheme" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/facebook</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:height">48dp</item>
        <item name="android:drawableLeft">@drawable/ic_facebook</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:text">@string/continue_with_facebook</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
